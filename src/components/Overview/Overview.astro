---
interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---
<section>
  <section class="max-w-7xl mx-auto p-8">
    <div class=" max-w-2xl">
      <h3 class="text-violet-300 text-lg mb-4">{subtitle}</h3>
      <h2 class="text-white text-5xl font-bold mb-4">{title}</h2>
      <p class="text-white">{description}</p>
    </div>
    <div>
      <slot />
    </div>
  </section>
</section>